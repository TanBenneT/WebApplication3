@page
@model WebApplication3.Pages.ChangePasswordModel

@{
}

<div class="row justify-content-center align-items-center">

	<div class="col-sm-12 col-md-12 col-lg-4">
		<h1 class="mb-3">Change Password </h1>

		<form method="post" asp-antiforgery="true">

			<div class="mb-3">
				<label class="form-label" asp-for="ChangePassword.CurrentPassword">Current Password</label>
				<input type="password" asp-for="ChangePassword.CurrentPassword" class="form-control" />
				<span asp-validation-for="ChangePassword.CurrentPassword" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label class="form-label" asp-for="ChangePassword.NewPassword">New Password</label>
				<input type="password" asp-for="ChangePassword.NewPassword" class="form-control" />
				<span asp-validation-for="ChangePassword.NewPassword" class="text-danger"></span>
			</div>

			<div class="mb-3">
				<label class="form-label" asp-for="ChangePassword.ConfirmNewPassword">Confirm Password</label>
				<input type="password" asp-for="ChangePassword.ConfirmNewPassword" class="form-control" />
				<span asp-validation-for="ChangePassword.ConfirmNewPassword" class="text-danger"></span>
			</div>

			<div class="col-md-12">
				<div class="mb-3 text-center">
					<button type="submit" class="btn btn-primary">Change Password</button>
				</div>
			</div>
		</form>
	</div>
</div>

